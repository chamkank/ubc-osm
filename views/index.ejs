<center>
  <h1 class="display-4 text-primary">Leaderboard</h1>
  <hr class="my-3" style="text-align: center;">

		<% for(var i=0; i<schools.length; i++) {%>
			<b><%= schools[i].school %>:</b> <%= schools[i].leaderboard_count %> &nbsp;&nbsp;&nbsp;
			<% } %>

  <table class="table table-inverse" style="max-width: 1000px;">
    <thead>
      <tr>
        <th></th>
        <th>Username</th>
        <th>Number of Pull Requests</th>
        <th>School</th>
      </tr>
    </thead>
    <tbody>
			<% for(var i=0; i<leaderboard_users.length; i++) {%>
      <tr>
				<td><a href="https://github.com/<%= leaderboard_users[i].username %>" style="text-decoration:none;"><img width="50px" height="50px" src="<%= leaderboard_users[i].avatar_url %>"/></a></td>
				<td><a href="https://github.com/<%= leaderboard_users[i].username %>" style="text-decoration:none; color: #ADD8E6;"><%= leaderboard_users[i].username %></a></td>
				<td><%= leaderboard_users[i].leaderboard_count %></td>
				<td><%= leaderboard_users[i].school %></td>
      </tr>
			<% } %>
    </tbody>
  </table>
</center>
